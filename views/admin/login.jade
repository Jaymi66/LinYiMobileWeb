doctype
html
	head
		include ./inc/head
	body
		.container
			.row
				.col-md-4.col-md-offset-4
					.panel.panel-default.login-panel
						.panel-heading
							h3.panel-title 登陆
						.panel-body
							form(role="form", action="/admin/login", method="post")
								fieldset
									.form-group
										input.form-control(name="username", type="text",placeholder="用户名", autofocus)
									.form-group
										input.form-control(name="password", type="password", placeholder="密码")
									button.btn.btn-success.btn-block(type="submit") 登陆
	include ./inc/baseJs