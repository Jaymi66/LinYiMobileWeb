doctype
html
	head
		include ./includes/head
	body
		.mobile-container
			.header.pr
				img(src="/images/top2.png")
				btn.img_video.pa#img_video
				p.pa.scenicTitle
					span #{zone.title}
					span #{zone.pinyintitle}
				img(src="/images/xxQ.png").pa.scenicTXX
			.scenic.scenic_info
				p.pr
					span.detail_title 简介
					span.detail_info#detail_info #{zone.intro}
					span.detail_icon >
				p.pr
					span.detail_title 类型
					span.detail_info #{zone.type}
					span.detail_icon >
				p.pr
					span.detail_title 开放时间
					span.detail_info #{zone.opentime}
					span.detail_icon >
				p.pr
					span.detail_title 地址
					span.detail_info #{zone.address}
					span.detail_icon
						<img src="/images/position3.png">
				p.pr
					span.detail_title 电话
					span.detail_info #{zone.phone}
					span.detail_icon 
			.scenic-line
			.scenic.scenic_rote
				p.rote_title 游览路线
				p #{zone.route}
					a.rote_a(href="#")
			.scenic-line
			.scenic
				p.review_title
					img.review_imgW(src="/images/Write.png")
					| 游客点评
					font (
						a #{assessments.length}
						| 条评论)
					a(href="/addAssessment/#{zone.id}") 评论
				each assessment in assessments
					.review
						div
							p.review_person
								img.review_imgP(src="/images/touxiang.png")
								span.review_personName 游客#{assessment.id}
							p.review_xx
								img.review_imgXX(src="/images/xxQ.png")
							p.review_time
								img.review_imgT(src="/images/colock.png")
								| #{moment(assessment.createdAt).format('YYYY年MM月DD日')}
						p.review_con #{assessment.content}

			.review_more#review_more
				input#review_more_con(placeholder="说两句，评一下")
		script#review_more_content(type='text/html')
					input.input_con#review_input_con(type="text" placeholder="请输入评论内容...")
					p.review_p_con
						span.strat_PF
							评分
						span.strat_HL
								span(index="1").star.starH#star0
								span(index="2").star.starH#star1
								span(index="3").star.starH#star2
								span(index="4").star.starH#star3
								span(index="5").star.starH#star4
					button.input_up
						提交

						
		script(type="text/html", id="detail_info_show_con")
			#detail_info_show #{zone.intro}
		script(type="text/html", id="video")
			audio
				source(src="#{zone.voice}", type="audio/mpeg")
		script(src="/libs/jquery/dist/jquery.min.js")
		script(src="/js/layer/layer.js")
		script.
				$(function(){
					//详细信息展示
					$("#detail_info").click(function(){
						layer.open({
								type: 0, //page层
								area: ['80%','100%'],
								title: '详细介绍',
								closeBtn: false,
								btn: ['X'],
								shade: 0.65,//遮罩透明度
								move: false,
								scrollbar: false,
								shift: 0, //0-6的动画形式，-1不开启
								content: $("#detail_info_show_con").html(),
						});
					});
					//- //输入框根据输入内容的各多少调节大小
					//- function resizeInput() {
					//- 	$(this).attr('size', $(this).val().length);
					//- }
					//- $("#review_input_con").keyup(resizeInput).each(resizeInput);
					$("#review_more").click(function(){
					 //- $("#review_more").toggle();
						layer.open({
								type: 1,
								area: ['100%'],
								title: false,
								closeBtn: 0,
								shadeClose: true,
								skin: 'review_more_conSkin',
								content: $("#review_more_content").html(),
								success:function(layero){
										$(".strat_HL .star").on('click', function(){
											$("#layui-layer1 .star").removeClass("starL").addClass("starH");
											for(var i=0;i<=$(this).index();i++){
													$('.strat_HL').children('span').eq(i).removeClass("starH").addClass("starL")
											}

									});
								}
						})
					});
					
					//加入音频
					$("#img_video").click(function(){
						$("#img_video").html($('#video').html());
					});

				})